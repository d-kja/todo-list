<%- include('header') -%>
<nav class="box" id="heading">
    <h1><%=title%></h1>
</nav>
<main class="box">
    <% if(items.length != 0) { %>
    <!--  -->
    <% items.forEach(item => { %>
        <form action="/del" method="post">
            <input type="hidden" name="list" value="<%=title%>">
            <div class="item">
                <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%=item._id%>"/>
                <p><%= item.name %></p>
            </div>
        </form>
    <% }); %>
    <!--  -->
    <% } %>
    <form action="/" method="post" class="item">
        <input
            autocomplete="off"
            type="text"
            name="item"
            placeholder="New item"
        />
        <button type="submit" name="list" value="<%=title%>">+</button>
    </form>
</main>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="./index.js"></script>
<%- include('bottom') -%>
